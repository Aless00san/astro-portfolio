<section class="section contact">
  <div class="container">
    <h2 class="title has-text-centered">Contact</h2>
    <p class="subtitle has-text-centered mb-5">
      Feel free to reach out — I’d love to hear from you!
    </p>

    <form class="box" action="#" method="post">
      <!-- Name -->
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" placeholder="Your name" name="name" required>
        </div>
      </div>

      <!-- Email -->
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input" type="email" placeholder="Your email address" name="email" required>
        </div>
      </div>

      <!-- Message -->
      <div class="field">
        <label class="label">Message</label>
        <div class="control">
          <textarea class="textarea" placeholder="Your message" name="message" required></textarea>
        </div>
      </div>

      <!-- Submit -->
      <div class="field has-text-centered">
        <button class="button is-primary is-medium" type="submit">
          Send Message
        </button>
      </div>
    </form>
  </div>
</section>

<style>
.contact {
  padding: 4rem 1rem;
}
.box {
  max-width: 600px;
  margin: 0 auto;
  border-radius: 12px;
}
</style>

